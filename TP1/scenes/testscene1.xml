<lsf>
    <initials>
        <reference length="2" />
        <root id="root" />
       
    </initials>
    <views default="defaultCamera">
       
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="19" y="15" z="19" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" /><!-- optional, default 0,1,0 -->
        </ortho>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           <!-- global ambient -->
        <background r="0.1" g="0.7" b="1.0" a="1.0" />        <!-- background color -->
    </illumination>


    <lights>
        <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
        <light id="demoLight">            <!-- light identifier -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="10" y="12" z="9.5" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>

        <light id="Light1">            <!-- light identifier -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="4" y="2" z="1" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
    </lights>


    <textures>
        <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
		<texture id="wallTexture" path="./scenes/images/wall.jpg" />
		<texture id="donutTexture" path="./scenes/images/donut.jpg" />
		<texture id="doorTexture" path="./scenes/images/door.png" />
		<texture id="keyboardTexture" path="./scenes/images/keyboard.png" />
		<texture id="windowTexture" path="./scenes/images/window.jpg" />
		<texture id="woodTexture1" path="./scenes/images/wood/wood1.jpg" />
		<texture id="woodTexture2" path="./scenes/images/wood/wood2.jpg" />
		<texture id="screenTexture" path="./scenes/images/screen.jpg" />
    </textures>


    <materials>
        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
        <material id="materialPreto">
            <shininess value="0.5" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

         <material id="materialChao">
            <shininess value="5" />
            <ambient r="0.75" g="0.45" b="0.26" a="1.0" />
            <diffuse r="0.7" g="0.5" b="0.4" a="1.0" />
            <specular r="0.06" g="0.06" b="0.06" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="materialAmarelo">
            <shininess value="5" />
            <ambient r="1.0" g="1.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="0.0" a="1.0" />
            <specular r="1.0" g="1.0" b="0.0" a="1.0" />
            <emissive r="1.0" g="1.0" b="0.0" a="1.0" />
        </material>
    </materials>




    <nodes>
       
    
<node id="cubo">         
        
        <material id="null" />
        <texture id="clear">
            <amplification afs="1.0" aft="1.0" />
        </texture>

        <transformations>
        </transformations>

        <descendants>
                <noderef id="faceCima" />
                <noderef id="faceBaixo" />
                <noderef id="faceFrente" />
                <noderef id="faceTras" />
                <noderef id="faceEsquerda" />
                <noderef id="faceDireita" />
            
        </descendants>
    </node>

 



    <node id="faceBaixo">         
        
        <material id="null" />
        <texture id="clear">
            <amplification afs="1.0" aft="1.0" />
        </texture>

        <transformations>
            <translation x="0.0" y="-0.5" z="0.0" />
            <rotation axis="x" angle="-90" />
        </transformations>


        <descendants>
                <leaf type="rectangle" x1="-0.5" y1="0.5" x2="0.5" y2="-0.5" />
        </descendants>
    </node>



    <node id="faceCima">         
        
        <material id="null" />
        <texture id="clear">
            <amplification afs="1.0" aft="1.0" />
        </texture>

        <transformations>
            <translation x="0.0" y="0.5" z="0.0" />
            <rotation axis="x" angle="90" />
        </transformations>


        <descendants>
            <leaf type="rectangle" x1="-0.5" y1="0.5" x2="0.5" y2="-0.5" />
        </descendants>
    </node>


    <node id="faceTras">         
        
        <material id="null" />
        <texture id="clear">
            <amplification afs="1.0" aft="1.0" />
        </texture>

        <transformations>
            <translation x="0.0" y="0.0" z="-0.5" />
        </transformations>


        <descendants>
            <leaf type="rectangle" x1="-0.5" y1="0.5" x2="0.5" y2="-0.5" />
        </descendants>
    </node>



        
    <node id="faceFrente">         
        
        <material id="null" />
        <texture id="clear">
            <amplification afs="1.0" aft="1.0" />
        </texture>

        <transformations>
            <translation x="0.0" y="0.0" z="0.5" />
            <rotation axis="y" angle="180" />
        </transformations>


        <descendants>
            <leaf type="rectangle" x1="-0.5" y1="0.5" x2="0.5" y2="-0.5" />
        </descendants>
    </node>



        
    <node id="faceDireita">         
        
        <material id="null" />
        <texture id="clear">
            <amplification afs="1.0" aft="1.0" />
        </texture>

        <transformations>
            <translation x="0.5" y="0.0" z="0.0" />
            <rotation axis="y" angle="-90" />
        </transformations>


        <descendants>
            <leaf type="rectangle" x1="-0.5" y1="0.5" x2="0.5" y2="-0.5" />  
        </descendants>
    </node>

        
    <node id="faceEsquerda">         
        
        <material id="null" />
        <texture id="clear">
            <amplification afs="1.0" aft="1.0" />
        </texture>

        <transformations>
            <translation x="-0.5" y="0.0" z="0.0" />
            <rotation axis="y" angle="90" /> 
        </transformations>


        <descendants>
            <leaf type="rectangle" x1="-0.5" y1="0.5" x2="0.5" y2="-0.5" />
        </descendants>
    </node>

  
    <node id="root">           
        <material id="null" />
        <texture id="woodTexture1">
          <amplification afs="1.0" aft="1.0" />
        </texture>

        <transformations>
            
        </transformations>

        <descendants>
            <noderef id="pernasMesa" />
            <noderef id="tampoMesa" />
            <noderef id="donut" />
			<noderef id="ecra" />
            <noderef id="esquadro"/>
        </descendants>
    </node>



    <node id="pernasMesa">
        <material id="null" />

        <texture id="clear">
            <amplification afs="1.0" aft="1.0" />
        </texture>

        <transformations>
            <translation x="0.0" y="0.0" z="0.0" />
             <scale sx="0.6" sy="0.6" sz="0.6" />
        </transformations>

        <descendants>
            <noderef id="pernaMesa1" />
            <noderef id="pernaMesa2" />
            <noderef id="pernaMesa3" />
            <noderef id="pernaMesa4" />
            <!-- x y z coordinates of each vertex -->
        </descendants>
    </node>


    <node id="pernaMesa1">            
        <material id="null" />

        <texture id="clear">
            <amplification afs="1.0" aft="1.0" />
        </texture>

        <transformations>
            <translation x="0.0" y="0.0" z="0.0" />
        </transformations>


        <descendants>
            <noderef id="pernaMesa" />
        
        </descendants>
    </node>

        
    <node id="pernaMesa2">         
        
        <material id="null" />
        <texture id="clear">
            <amplification afs="1.0" aft="1.0" />
        </texture>

        <transformations>
            <translation x="10.0" y="0.0" z="0.0" />
        </transformations>

        <descendants>
            <noderef id="pernaMesa" />
        </descendants>
    </node>

        
    <node id="pernaMesa3">         
        
        <material id="null" />
        <texture id="clear">
            <amplification afs="1.0" aft="1.0" />
        </texture>

        <transformations>
            <translation x="0.0" y="0.0" z="5.0" />
        </transformations>

        <descendants>
            <noderef id="pernaMesa" />
            
        </descendants>
    </node>

        
    <node id="pernaMesa4">         
        
        <material id="null" />
        <texture id="clear">
            <amplification afs="1.0" aft="1.0" />
        </texture>

        <transformations>
            <translation x="10.0" y="0.0" z="5.0" />
        </transformations>

        <descendants>
            <noderef id="pernaMesa" />
            
        </descendants>
    </node>

        
    <node id="pernaMesa">         
        
        <material id="null" />
        <texture id="clear">
            <amplification afs="1.0" aft="1.0" />
        </texture>

        <transformations>
         <rotation axis="x" angle="-90" />
        </transformations>

        <descendants>
                <leaf type="cylinder" height="7" topRadius="0.35" bottomRadius="0.35" stacks="8" slices="16"/>
        </descendants>
    </node>


        
    <node id="tampoMesa">         
        <material id="null" />
        <texture id="clear">
            <amplification afs="1.0" aft="1.0" />
        </texture>

        <transformations>
            <translation x="3" y="4.2" z="1.5" />
            <scale sx="7" sy="0.3" sz="3.8" />
        </transformations>

        <descendants>
                <noderef id="cubo" />
            
        </descendants>
    </node>



          </nodes>
</lsf>

