<lsf>
    <initials>
        <reference length="2" />
        <root id="root" />
       
    </initials>
    <views default="defaultCamera">
       
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="19" y="15" z="19" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" /><!-- optional, default 0,1,0 -->
        </ortho>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           <!-- global ambient -->
        <background r="0.1" g="0.7" b="1.0" a="1.0" />        <!-- background color -->
    </illumination>


    <lights>
        <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
        <light id="demoLight">            <!-- light identifier -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="10" y="12" z="9.5" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>

        <light id="Light1">            <!-- light identifier -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="4" y="2" z="1" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
    </lights>


    <textures>
        <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
		<texture id="wallTexture" path="./scenes/images/wall.jpg" />
		<texture id="donutTexture" path="./scenes/images/donut.jpg" />
		<texture id="doorTexture" path="./scenes/images/door.png" />
		<texture id="keyboardTexture" path="./scenes/images/keyboard.png" />
		<texture id="windowTexture" path="./scenes/images/window.jpg" />
		<texture id="woodTexture1" path="./scenes/images/wood/wood1.jpg" />
		<texture id="woodTexture2" path="./scenes/images/wood/wood2.jpg" />
		<texture id="screenTexture" path="./scenes/images/screen.jpg" />
    </textures>


    <materials>
        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
        <material id="materialPreto">
            <shininess value="0.5" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

         <material id="materialChao">
            <shininess value="5" />
            <ambient r="0.75" g="0.45" b="0.26" a="1.0" />
            <diffuse r="0.7" g="0.5" b="0.4" a="1.0" />
            <specular r="0.06" g="0.06" b="0.06" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="materialAmarelo">
            <shininess value="5" />
            <ambient r="1.0" g="1.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="0.0" a="1.0" />
            <specular r="1.0" g="1.0" b="0.0" a="1.0" />
            <emissive r="1.0" g="1.0" b="0.0" a="1.0" />
        </material>
    </materials>




    <nodes>
        	<!--teto-->
		<node id="teto">
			  
            <material id="materialChao" />
            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="1.0" y="2.0" z="1.0" />
                <scale sx="2.0" sy="0.0" sz="2.0"/>
                <rotation axis="x" angle="-90" />
            </transformations>


            <descendants>
                <leaf type="rectangle" x1="-0.5" y1="0.5" x2="0.5" y2="-0.5" /> 
            </descendants>
		</node>

		<!--chao-->
		<node id="chao">
			<material id="null" />
            <texture id="wallTexture">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="1.0" y=".0" z="1.0" />
                <scale sx="2.0" sy="0.0" sz="2.0"/>
                <rotation axis="x" angle="90" />
            </transformations>


            <descendants>
                <leaf type="rectangle" x1="-0.5" y1="0.5" x2="0.5" y2="-0.5" />
            </descendants>
		</node>

	<!--Parede -->
		<node id="paredeTras">
			<material id="null" />
            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="1.0" y="1.0" z="2.0" />
                <scale sx="2.0" sy="2.0" sz="0.0"/>
                 
            </transformations>


            <descendants>
                <leaf type="rectangle" x1="-0.5" y1="0.5" x2="0.5" y2="-0.5" />
            </descendants>
		</node>


        <!--Parede -->
		<node id="paredeFrente">
			 <material id="null" />
            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="1.0" y="1.0" z="5.0" />
                <scale sx="2.0" sy="20.0" sz="0.0"/>
                <rotation axis="y" angle="-90" />
            </transformations>


            <descendants>
                <leaf type="rectangle" x1="-0.5" y1="0.5" x2="0.5" y2="-0.5" />
            </descendants>
		</node>


        <!--Parede -->
		<node id="paredeDireita">
			 <material id="null" />
            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="2.0" y="1.0" z="1.0" />
                <scale sx="0.0" sy="2.0" sz="2.0"/>
                <rotation axis="y" angle="90" />
            </transformations>


            <descendants>
                <leaf type="rectangle" x1="-0.5" y1="0.5" x2="0.5" y2="-0.5" />
            </descendants>
		</node>

        <!--Parede -->
		<node id="paredeEsquerda">
			 <material id="null" />
            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="1.0" z="1.0" />
                <scale sx="0.0" sy="2.0" sz="2.0"/>
                <rotation axis="y" angle="-90" />
            </transformations>


            <descendants>
                <leaf type="rectangle" x1="-0.5" y1="0.5" x2="0.5" y2="-0.5" />
            </descendants>
		</node>

          <!--chao teto e paredes -->
		<node id="root">
			 <material id="null" />
            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>


            <descendants>
                <noderef id="paredes" />
                <noderef id="chao" />
                <noderef id="teto" />
            </descendants>
		</node>

    <!--chao teto e paredes -->
		<node id="paredes">
			<material id="null" />
            <texture id="wallTexture">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="paredeFrente" />
                <noderef id="paredeTras" />
                <noderef id="paredeDireita" />
                <noderef id="paredeEsquerda" />
            </descendants>
		</node>







          </nodes>
</lsf>

